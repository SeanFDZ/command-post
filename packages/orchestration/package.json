{
  "name": "@command-post/orchestration",
  "version": "0.0.1",
  "description": "Multi-agent orchestration engine for Command Post",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/SeanFDZ/command-post.git",
    "directory": "packages/orchestration"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
