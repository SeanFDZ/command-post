{
  "name": "@command-post/cli",
  "version": "0.0.1",
  "description": "CLI and tmux session management for Command Post",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/command-post/command-post.git",
    "directory": "packages/cli"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@command-post/core": "workspace:*",
    "chalk": "^5.4.1",
    "execa": "^9.5.2"
  },
  "devDependencies": {
    "@types/node": "^22.12.0"
  }
}
