{
  "name": "@command-post/core",
  "version": "0.0.1",
  "description": "Core types and utilities for Command Post",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/command-post/command-post.git",
    "directory": "packages/core"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "graceful-fs": "^4.2.11",
    "proper-lockfile": "^4.1.2",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/graceful-fs": "^4.1.9",
    "@types/proper-lockfile": "^4.1.4",
    "@types/uuid": "^10.0.0"
  }
}
